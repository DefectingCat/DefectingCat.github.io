// Rewrite navbar

.navbar
  background-color transparent
  font-size 0.875rem
  color $navbar-text-color
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  -webkit-box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

  a
    color $navbar-text-color

    &:hover
      background-color rgba(0, 0, 0, 0.1)

  .nav-item .nav-link
    display block

  .navbar-toggler
    border-width 0
    outline 0

  &.navbar-dark .breadcrumb .nav-item .nav-link, &.navbar-dark .navbar-nav .nav-item .nav-link
    color #fff
    -webkit-transition .35s
    transition .35s

  @media (min-width: 600px)
    &.scrolling-navbar
      padding-top 12px
      padding-bottom 12px
      -webkit-transition background 0.5s ease-in-out, padding 0.5s ease-in-out
      transition background 0.5s ease-in-out, padding 0.5s ease-in-out

    &.scrolling-navbar .navbar-nav > li
      -webkit-transition-duration 1s
      transition-duration 1s

  &.scrolling-navbar.top-nav-collapse
    padding-top 5px
    padding-bottom 5px

.navbar-custom
  color $navbar-text-color

  a
    color $navbar-text-color

.top-nav-collapse
  background-color $navbar-bg-color

.navbar-col-show
  background-color $navbar-bg-color


@media (max-width: 767px)
  .navbar
    font-size 1rem
    line-height 2.5rem


// Rewrite github-markdown.css

.markdown-body
  margin-bottom 2rem
  font-family $font-family
  color #2c3e50

  strong
    font-weight bold

  h1, h2, h3, h4, h5, h6
    color #1a202c
    margin-bottom .75em
    margin-top 2em

    &:focus
      outline none

  hr
    height .2em
    margin 2rem 0

  strong
    font-weight bold

  p > img, p > a > img
    max-width 90%
    margin 1.5rem auto
    display block
    box-shadow $img-shadow


// Rewrite mdb.css

.list-group-item
  border 0

.page-link
  font-size 1.1rem

// Rewrite pagination

.pagination a, .pagination .current
  outline 0
  border 0
  background-color transparent
  font-size .9rem
  padding .5rem .75rem
  line-height 1.25
  -webkit-border-radius .125rem
  border-radius .125rem
  -webkit-transition all .3s linear
  -o-transition all .3s linear
  transition all .3s linear

.pagination a:hover, .pagination .current
  background-color #eee
