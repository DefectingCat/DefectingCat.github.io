.index-header
  font-weight 700
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

@media (max-width: 768px)
  .index-header
    font-size 1.25rem
    white-space normal
    overflow hidden
    margin-top 1.25rem

.index-thumbnails
  display block
  width 100%
  height 10rem
  object-fit cover

.index-excerpt
  margin 0.5rem 0 0.5rem 0
  height auto
  max-height 5rem
  line-height 1.25rem
  overflow hidden

  .index-text
    float right
    margin-left -0.25rem
    width 100%
    word-break break-word

  &::before
    float left
    width 0.25rem
    content ''
    height 2rem

